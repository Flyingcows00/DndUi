<div class="row justify-content-center">
    <div class="col-lg-4 mt-5">
        <form onsubmit={{action 'submitForm'}}>
            <div class="form-group">
                <div class="row">
                    <label for="usernameSelect">Who are you?</label>
                    <select class="form-control" id="usernameSelect">
                        <option></option>
                        {{#each model as |user|}}
                            <option class="option">{{user.username}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col" align="right">
                    {{input type="checkbox" id="remember-me-checkbox" checked=rememberMe}}
                    <label for="remember-me-checkbox">Remember Me</label>
                    <button class="btn btn-primary px-4 ml-4">Login</button>
                </div>
            </div>
        </form>
    </div>
</div>